                                </noscript>
                                {{ bandcampFrameLg("40123073", "the-thought-that-counts", "The
                                    Thought That Counts by Front Royal") }}
                            </div>
                        </div>
                        <section id="cta">
                            <a class="button"
                               href="{{ bandcamp.url }}/album/the-thought-that-counts">Buy
                                The
                                Album Now</a>
                        </section>
                    </section>
                </div>

                {% include "partials/arrow-cw.njk" %}

                <article class="full skewed-background" id="follow">
                    <div class="wrapper">
                        <section class="content center">
                            <h2>Follow Us</h2>
                            <div class="icons full flex-center wrap">
                                {% for social in socials %}
                                    <a href="{{ social.url }}">
                                        <img src="/assets/img/{{ social.img }}.svg" alt="{{ social.alt }}"
                                             loading="lazy" decoding="async" width="48" height="48">
                                    </a>
                                {% endfor %}
                            </div>
