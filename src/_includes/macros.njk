{% macro youtube(url, title="YouTube video player", loading="lazy") %}
    <div class="video-embed">
        <iframe loading="{{ loading }}" width="560" height="315"
                src="{{ url }}"
                title="{{ title }}" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
    </div>
{% endmacro %}

{% macro bandcampFrameSm(id, track, title="Bandcamp Embedded Track Player") %}
    <iframe title="{{ title }}" loading="lazy"
            style="border: 0; width: 100%; height: 120px;"
            src="https://bandcamp.com/EmbeddedPlayer/track={{ id }}/size=large/bgcol=333333/linkcol=ffffff/tracklist=false/artwork=small/transparent=true/"
            seamless><a href="{{ socials.bandcamp.url }}/track/{{ track }}">{{ title }}</a></iframe>
{% endmacro %}

{% macro bandcampFrameLg(id, album, title="Bandcamp Embedded Album Player") %}
    <iframe style="border: 0; width: 100%; height: 472px; max-width: 500px;"
            src="https://bandcamp.com/EmbeddedPlayer/album={{ id }}/size=large/bgcol=333333/linkcol=4ec5ec/artwork=none/transparent=true/"
            seamless loading="lazy"
            title="{{ title }}"><a
                href="{{ socials.bandcamp.url }}/album/{{ album }}">{{ title }}</a></iframe>
{% endmacro %}

{% macro merch(item, link, img, alt="") %}
    <figure>
        <a href="{{ link }}">
            <picture>
                <source srcset="/assets/img/{{ img }}.webp" type="image/webp">
                <img src="/assets/img/{{ img }}.jpg" width="509" height="509"
                     alt="{{ alt }}" loading="lazy" decoding="async">
            </picture>
        </a>
        <figcaption>{{ item }}</figcaption>
    </figure>
{% endmacro %}